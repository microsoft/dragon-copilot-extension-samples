{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "Name": "Sample Extension API",
    "Version": "1.0.0",
    "Description": "A sample extension API that processes requests from the Dragon Backend Simulator"
  },
  "Authentication": {
    "Enabled": true,
    "TenantId": "<your-tenant-id>", // Represents extension vendor's tenant id
    "ClientId": "<your-client-id>", // Represents extension vendor's client id
    "Instance": "https://login.microsoftonline.com/",
    "MapInboundClaims": false,
    "AllowWebApiToBeAuthorizedByACL" : true,
    "RequiredClaims":{
      "idtyp": ["app"],
      "azp": ["d9350f5d-71c2-46b9-b41d-3c5d51ffe6e8"] // This represents Microsoft Dragon Copilot Extensions Runtime Application
    }
  },
  "LicenseKey": {
    "Enabled": true,
    "HeaderName": "X-License-Key",
    "ValidKeys": ["premium-key-1", "enterprise-key-2", "partner-key-3"]
  }
}
