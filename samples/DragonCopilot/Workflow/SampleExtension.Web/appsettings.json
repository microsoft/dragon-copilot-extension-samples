{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "Name": "Sample Extension API",
    "Version": "1.0.0",
    "Description": "A sample extension API that processes requests from the Dragon Backend Simulator"
  },
  "Authentication": {
    "Enabled": true,
    "TenantId": "<your-tenant-id>",
    "ClientId": "<your-client-id>",
    "Instance": "https://login.microsoftonline.com/",
    "MapInboundClaims": false,
    "AllowWebApiToBeAuthorizedByACL" : true,
    "RequiredClaims":{
      "idtyp": ["app"],
      "azp": ["<dragon-runtime-extension-client-id-TBD"]
    }
  },
  "LicenseKey": {
    "Enabled": true,
    "HeaderName": "x-dre-License-Key",
    "ValidKeys": ["premium-key-1", "enterprise-key-2", "partner-key-3"]
  }
}
