{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dragon Copilot Extension Publisher Configuration",
  "type": "object",
  "required": [
    "publisherId",
    "publisherName",
    "websiteUrl",
    "privacyPolicyUrl",
    "supportUrl",
    "version",
    "contactEmail",
    "offerId",
    "defaultLocale",
    "supportedLocales",
    "scope",
    "regions"
  ],
  "properties": {
    "publisherId": {
      "type": "string",
      "pattern": "^[a-z0-9.-]+$",
      "minLength": 1,
      "description": "Unique identifier for the publisher (lowercase letters, numbers, dots, and hyphens only)"
    },
    "publisherName": {
      "type": "string",
      "minLength": 1,
      "description": "Display name of the publisher"
    },
    "websiteUrl": {
      "type": "string",
      "format": "uri",
      "description": "Publisher's website URL"
    },
    "privacyPolicyUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to privacy policy"
    },
    "supportUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL for support information"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version of the publisher configuration in x.y.z format"
    },
    "contactEmail": {
      "type": "string",
      "format": "email",
      "description": "Contact email for support"
    },
    "offerId": {
      "type": "string",
      "minLength": 1,
      "description": "Identifier for the extension offering"
    },
    "defaultLocale": {
      "type": "string",
      "enum": ["en-US"],
      "description": "Default locale (currently only en-US is supported). To extend: add more locales to the enum array."
    },
    "supportedLocales": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["en-US"]
      },
      "description": "Supported locales (currently only en-US is supported). To extend: add more locales to the enum array."
    },
    "regions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["US"]
      },
      "description": "Supported regions (currently only US is supported). To extend: add more regions to the enum array."
    },
    "scope": {
      "type": "string",
      "enum": ["Workflow"],
      "description": "Scope of the extension (currently only Workflow is supported). To extend: add more scopes to the enum array."
    }
  },
  "additionalProperties": false
}
